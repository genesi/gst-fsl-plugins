# vss device definition
# Master=DVI, Slave=WVGA
# please add "video=mxcdi1fb:RGB565,,CLAA-WVGA mxcdi0fb:RGB24,1024x768M-16@60" to kernel startup command line

# master display
[DVI]
type = framebuffer
format = RGBP
fb_num = 2
main_fb_num = 0
vs_max = 4

# slave display
[WVGA]
type = framebuffer
format = RGBP
fb_num = 1
vs_max = 4

